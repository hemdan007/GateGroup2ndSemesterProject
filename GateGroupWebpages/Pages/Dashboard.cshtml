@page
@using gategourmetLibrary.Models
@model GateGroupWebpages.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="dashboard-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="dashboard-title mb-1">My Dashboard</h2>
            <p class="dashboard-subtitle mb-0">
                Overview of your orders grouped by status.
            </p>
        </div>

        <a class="btn btn-outline-light btn-sm dashboard-neworder-btn" asp-page="/NewOrder">
            + Create new order
        </a>
    </div>

    <div class="card dashboard-card shadow-sm">
        <div class="card-body">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 gap-2">
                <form method="get" class="d-flex align-items-center gap-2">
                    <label class="form-label mb-0" for="statusFilter">Filter by status:</label>
                    <select asp-for="statusFilter"
                            asp-items="Model.StatusOptions"
                            class="form-select form-select-sm w-auto"
                            id="statusFilter"
                            onchange="this.form.submit()">
                    </select>
                </form>

                @if (Model.Orders != null && Model.Orders.Any())
                {
                    <span class="text-muted small">
                        Showing @Model.Orders.Count() order(s)
                    </span>
                }
            </div>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="table-responsive">
                    <table class="table align-middle table-dark table-borderless dashboard-table">
                        <thead>
                            <tr>
                                <th>Order</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Time</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Order order in Model.Orders)
                            {
                                <tr>
                                    <td>@order.ID</td>
                                    <td>
                                        @if (order.Status == OrderStatus.Created)
                                        {
                                            <span class="badge bg-secondary">Created</span>
                                        }
                                        else if (order.Status == OrderStatus.InProgress)
                                        {
                                            <span class="badge bg-warning text-dark">In progress</span>
                                        }
                                        else if (order.Status == OrderStatus.Completed)
                                        {
                                            <span class="badge bg-success">Completed</span>
                                        }
                                        else if (order.Status == OrderStatus.Cancelled)
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                    </td>
                                    <td>@order.OrderMade.ToShortDateString()</td>
                                    <td>@order.OrderMade.ToShortTimeString()</td>

                                    <td class="text-end">
                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-id="@order.ID"
                                              class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this order?');">
                                            <button class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">
                    No orders found for the selected status.
                    Try choosing another status or create a new order.
                </p>
            }
        </div>
    </div>
</div>
