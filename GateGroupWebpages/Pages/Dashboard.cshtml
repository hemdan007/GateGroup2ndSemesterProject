@page
@using gategourmetLibrary.Models
@model GateGroupWebpages.Pages.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4 text-light">

    <!-- header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="mb-1" style="font-family:'Playfair Display',serif;">My Dashboard</h2>
            <div class="opacity-75">Overview of your orders grouped by status.</div>
        </div>

        <a class="btn btn-light" asp-page="/NewOrder">+ Create new order</a>
    </div>

    <!-- content card -->
    <div class="card bg-dark border-secondary text-light shadow-sm">
        <div class="card-body">

            <!-- filter row -->
            <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                <form method="get" class="d-flex align-items-center gap-2 mb-0">
                    <label class="form-label mb-0" for="statusFilter">Filter by status:</label>

                    <select asp-for="statusFilter"
                            asp-items="Model.StatusOptions"
                            class="form-select form-select-sm w-auto"
                            id="statusFilter"
                            onchange="this.form.submit()">
                    </select>
                </form>

                @if (Model.Orders != null && Model.Orders.Any())
                {
                    <div class="small opacity-75">
                        Showing @Model.Orders.Count() order(s)
                    </div>
                }
            </div>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="d-block d-md-none">
                    <div class="d-grid gap-2">
                        @foreach (Order order in Model.Orders)
                        {
                            <div class="card bg-dark border-secondary text-light">
                                <div class="card-body">

                                    <div class="d-flex justify-content-between align-items-start gap-2">
                                        <div>
                                            <div class="small opacity-75">Order</div>
                                            <div class="fw-semibold">
                                                <span class="badge rounded-pill bg-secondary">#@order.ID</span>
                                            </div>
                                        </div>

                                        <div class="text-end">
                                            <div class="small opacity-75">Status</div>
                                            <div>
                                                @if (order.Status == OrderStatus.Created)
                                                {
                                                    <span class="badge bg-secondary">Created</span>
                                                }
                                                else if (order.Status == OrderStatus.InProgress)
                                                {

                                                    <span class="badge bg-warning text-dark">In progress</span>
                                                }
                                                else if (order.Status == OrderStatus.Completed)
                                                {

                                                    <span class="badge bg-success">Completed</span>
                                                }
                                                else if (order.Status == OrderStatus.Cancelled)
                                                {

                                                    <span class="badge bg-danger">Cancelled</span>
                                                }
                                                else
                                                {

                                                    <span class="badge bg-secondary">Unknown</span>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <hr class="border-secondary my-3" />

                                    <div class="d-flex justify-content-between">
                                        <div>
                                            <div class="small opacity-75">Made date</div>
                                            <div class="fw-semibold">@order.OrderMade.ToString("dd-MM-yyyy")</div>
                                        </div>
                                        <div class="text-end">
                                            <div class="small opacity-75">Made time</div>
                                            <div class="fw-semibold">@order.OrderMade.ToString("HH:mm")</div>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <a asp-page="/OrderDetails"
                                           asp-route-orderId="@order.ID"
                                           class="btn btn-outline-light">
                                            More info
                                        </a>

                                        <form method="post"
                                              asp-page-handler="Delete"
                                              asp-route-id="@order.ID"
                                              onsubmit="return confirm('Delete order #@order.ID? This cannot be undone.');">
                                            <button type="submit" class="btn btn-outline-danger w-100">
                                                Delete
                                            </button>
                                        </form>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="d-none d-md-block">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0">
                            <thead class="border-secondary">
                                <tr>
                                    <th>Order</th>
                                    <th>Status</th>
                                    <th>Made date</th>
                                    <th>Made time</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (Order order in Model.Orders)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge rounded-pill bg-secondary">#@order.ID</span>
                                        </td>

                                        <td>
                                            @if (order.Status == OrderStatus.Created)
                                            {
                                                <span class="badge bg-secondary">Created</span>
                                            }
                                            else if (order.Status == OrderStatus.InProgress)
                                            {

                                                <span class="badge bg-warning text-dark">In progress</span>
                                            }
                                            else if (order.Status == OrderStatus.Completed)
                                            {

                                                <span class="badge bg-success">Completed</span>
                                            }
                                            else if (order.Status == OrderStatus.Cancelled)
                                            {

                                                <span class="badge bg-danger">Cancelled</span>
                                            }
                                            else
                                            {

                                                <span class="badge bg-secondary">Unknown</span>
                                            }
                                        </td>

                                        <td>@order.OrderMade.ToString("dd-MM-yyyy")</td>
                                        <td>@order.OrderMade.ToString("HH:mm")</td>

                                        <td class="text-end">
                                            <a asp-page="/OrderDetails"
                                               asp-route-orderId="@order.ID"
                                               class="btn btn-sm btn-outline-light me-2">
                                                More info
                                            </a>

                                            <form method="post"
                                                  asp-page-handler="Delete"
                                                  asp-route-id="@order.ID"
                                                  class="d-inline"
                                                  onsubmit="return confirm('Delete order #@order.ID? This cannot be undone.');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-secondary mb-0">
                    No orders found for the selected status. Try another status or create a new order.
                </div>
            }

        </div>
    </div>
</div>
