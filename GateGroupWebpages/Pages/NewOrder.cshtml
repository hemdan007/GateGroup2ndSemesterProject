@page
@model GateGroupWebpages.Pages.NewOrderModel
@{
    ViewData["Title"] = "New order";
}

<div class="container py-4">

    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="h3 mb-2">Create new order</h1>
        <p class="text-muted mb-0">
            Add the basic order details and define the recipe parts for this order.
        </p>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning" role="alert">
            <strong>Information:</strong> @Model.ErrorMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-warning" role="alert">
            <strong>Information:</strong> @Model.SuccessMessage
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">

            <form method="post">

                <!-- Order information -->
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-2">
                    <h2 class="h5 mb-0">Order information</h2>
                    <span class="text-muted small">Fields marked with * are recommended</span>
                </div>

                <div class="row g-3 mb-3">

                    <div class="col-12 col-md-6">
                        <label asp-for="newOrder.OrderDoneBy" class="form-label">
                            Ready by *
                        </label>
                        <input asp-for="newOrder.OrderDoneBy"
                               type="date"
                               class="form-control"
                               id="OrderDoneBy"
                               aria-describedby="dateHelp" />
                        <div id="dateHelp" class="form-text">
                            Select the date when the order must be ready.
                        </div>
                    </div>

                    <div class="col-12 col-md-6 d-flex align-items-end">
                        <div class="form-check">
                            <input asp-for="newOrder.paystatus"
                                   type="checkbox"
                                   class="form-check-input"
                                   id="PayStatus" />
                            <label class="form-check-label" for="PayStatus">
                                Order has been paid
                            </label>
                        </div>
                    </div>

                </div>

                <hr class="my-4" />

                <!-- Recipe parts -->
                <h2 class="h5 mb-2">Recipe parts</h2>
                <p class="text-muted mb-4">
                    Each recipe part is one component of the order (for example: “Cold snacks”, “Bread”, “Drinks”).
                </p>

                <!-- Recipe part 1 -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="h6 mb-3">Recipe part 1</h3>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart1.partName" class="form-label">Part name</label>
                                <input asp-for="recipePart1.partName"
                                       type="text"
                                       class="form-control"
                                       placeholder="e.g. Cold dishes" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart1.Assemble" class="form-label">How to assemble</label>
                                <input asp-for="recipePart1.Assemble"
                                       type="text"
                                       class="form-control"
                                       placeholder="Short preparation instructions" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Ingredient</label>
                                <select asp-for="Ingredient1" class="form-select" asp-items="Model.IngredientOptions">
                                    <option value="0">Select an ingredient</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Allergy</label>
                                <select asp-for="allerie1" class="form-select" asp-items="Model.AllerieOptions">
                                    <option value="0">Select an allergy</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recipe part 2 -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="h6 mb-3">Recipe part 2</h3>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart2.partName" class="form-label">Part name</label>
                                <input asp-for="recipePart2.partName"
                                       type="text"
                                       class="form-control"
                                       placeholder="e.g. Hot dishes" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart2.Assemble" class="form-label">How to assemble</label>
                                <input asp-for="recipePart2.Assemble"
                                       type="text"
                                       class="form-control"
                                       placeholder="Short preparation instructions" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Ingredient</label>
                                <select asp-for="Ingredient2" class="form-select" asp-items="Model.IngredientOptions">
                                    <option value="0">Select an ingredient</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Allergy</label>
                                <select asp-for="allerie2" class="form-select" asp-items="Model.AllerieOptions">
                                    <option value="0">Select an allergy</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recipe part 3 -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="h6 mb-3">Recipe part 3</h3>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart3.partName" class="form-label">Part name</label>
                                <input asp-for="recipePart3.partName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Enter the part name" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart3.Assemble" class="form-label">How to assemble</label>
                                <input asp-for="recipePart3.Assemble"
                                       type="text"
                                       class="form-control"
                                       placeholder="Short preparation instructions" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Ingredient</label>
                                <select asp-for="Ingredient3" class="form-select" asp-items="Model.IngredientOptions">
                                    <option value="0">Select an ingredient</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Allergy</label>
                                <select asp-for="allerie3" class="form-select" asp-items="Model.AllerieOptions">
                                    <option value="0">Select an allergy</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recipe part 4 -->
                <div class="card mb-3">
                    <div class="card-body">
                        <h3 class="h6 mb-3">Recipe part 4</h3>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart4.partName" class="form-label">Part name</label>
                                <input asp-for="recipePart4.partName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Enter the part name" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart4.Assemble" class="form-label">How to assemble</label>
                                <input asp-for="recipePart4.Assemble"
                                       type="text"
                                       class="form-control"
                                       placeholder="Short preparation instructions" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Ingredient</label>
                                <select asp-for="Ingredient4" class="form-select" asp-items="Model.IngredientOptions">
                                    <option value="0">Select an ingredient</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Allergy</label>
                                <select asp-for="allerie4" class="form-select" asp-items="Model.AllerieOptions">
                                    <option value="0">Select an allergy</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recipe part 5 -->
                <div class="card mb-4">
                    <div class="card-body">
                        <h3 class="h6 mb-3">Recipe part 5</h3>

                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart5.partName" class="form-label">Part name</label>
                                <input asp-for="recipePart5.partName"
                                       type="text"
                                       class="form-control"
                                       placeholder="Enter the part name" />
                            </div>

                            <div class="col-12 col-md-6">
                                <label asp-for="recipePart5.Assemble" class="form-label">How to assemble</label>
                                <input asp-for="recipePart5.Assemble"
                                       type="text"
                                       class="form-control"
                                       placeholder="Short preparation instructions" />
                            </div>

                            <div class="col-12">
                                <label class="form-label">Ingredient</label>
                                <select asp-for="Ingredient5" class="form-select" asp-items="Model.IngredientOptions">
                                    <option value="0">Select an ingredient</option>
                                </select>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Allergy</label>
                                <select asp-for="allerie5" class="form-select" asp-items="Model.AllerieOptions">
                                    <option value="0">Select an allergy</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Hidden fields -->
                <input type="hidden" value="@DateTime.Now" asp-for="newOrder.OrderMade" />
                <input type="hidden" value="@HttpContext.Session.GetString("userid")" asp-for="newOrder.CustomerOrder.ID" />

                <!-- Actions -->
                <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end">
                    <a asp-page="/Dashboard" class="btn btn-outline-secondary">
                        Cancel
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Submit order
                    </button>
                </div>

            </form>

        </div>
    </div>

</div>
