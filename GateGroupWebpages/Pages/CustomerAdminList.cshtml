@page
@model CompanyWebpages.Pages.CustomerAdminListModel
@using gategourmetLibrary.Models

@{
    ViewData["Title"] = "Manage customers";
}

<h1 class="mb-3" style="font-family:'Playfair Display', serif; color: #D4C48A;">
    ADMIN – Manage / delete customers
</h1>

<p class="text-muted">
    You are now on the admin page where customers can be deleted from the system.
</p>

<p class="text-muted">
    <strong>Debug – current path:</strong> @HttpContext.Request.Path
</p>

@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-success">
        @Model.StatusMessage
    </div>
}

<div class="table-responsive mt-3">
    <table class="table table-dark table-striped align-middle">
        <thead>
            <tr>
                <th>Customer Id</th>
                <th>Name</th>
                <th>Password</th>
                <th style="width: 140px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Customers != null && Model.Customers.Count > 0)
            {
                foreach (Customer customer in Model.Customers)
                {
                    <tr>
                        <td>@customer.ID</td>
                        <td>@customer.Name</td>
                        <td>@customer.Password</td>
                        <td>
                            <form method="post" asp-page-handler="Delete"
                                  onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                <input type="hidden" name="customerId" value="@customer.ID" />
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-muted">No customers found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
