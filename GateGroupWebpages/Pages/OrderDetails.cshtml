@page "{orderId:int}"
@model GateGroupWebpages.Pages.OrderDetailsModel
@{
    ViewData["Title"] = "The order Details";
}

<div class="container py-4 text-light">

    <!-- Header -->
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 mb-3">
        <div>
            <h2 class="mb-1" style="font-family:'Playfair Display',serif;">
                Order Details <span class="opacity-75">#@Model.Order.ID</span>
            </h2>
            <div class="opacity-75">
                Review order information and recipe parts.
            </div>
        </div>
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-warning" role="alert">
                <strong>Information:</strong> @Model.ErrorMessage
            </div>
        }
        <!-- Single Back button  -->
        <a class="btn btn-outline-light" asp-page="/Dashboard">
            Back to Dashboard
        </a>
    </div>
    @if (string.IsNullOrEmpty(Model.ErrorMessage))
    {
 
    <!-- Order summary -->
    <div class="card bg-dark border-secondary text-light shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">

                <div class="col-md-4">
                    <div class="small opacity-75">Status</div>
                    <div class="fw-semibold">@Model.Order.Status</div>
                </div>

                <div class="col-md-4">
                    <div class="small opacity-75">Made date</div>
                    <div class="fw-semibold">
                        @Model.Order.OrderMade.ToString("dd-MM-yyyy")
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="small opacity-75">Made time</div>
                    <div class="fw-semibold">
                        @Model.Order.OrderMade.ToString("HH:mm")
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="small opacity-75">Ready by</div>
                    <div class="fw-semibold">
                        @Model.Order.OrderDoneBy.ToString("dd-MM-yyyy")
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="small opacity-75">Payment status</div>
                    <div class="fw-semibold">
                        @(Model.Order.paystatus ? "Paid" : "Not paid")
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- Recipe parts -->
    <h3 class="mb-2" style="font-family:'Playfair Display',serif;">
        Recipe Parts
    </h3>

    @if (Model.Order.Recipe != null && Model.Order.Recipe.Any())
    {
        <div class="card bg-dark border-secondary text-light shadow-sm mb-4">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="border-secondary">
                            <tr>
                                <th style="width: 25%;">Part Name</th>
                                <th style="width: 45%;">How To Prepare</th>
                                <th>Ingredients</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var part in Model.Order.Recipe)
                            {
                                <tr>
                                    <td class="fw-semibold">@part.Value.partName</td>
                                    <td>@part.Value.Assemble</td>
                                    <td>
                                        @if (part.Value.Ingredients != null && part.Value.Ingredients.Any())
                                        {
                                            foreach (var ingredient in part.Value.Ingredients)
                                            {
                                                <span class="badge bg-secondary me-1 mb-1">
                                                    @ingredient.Name
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="opacity-75">None</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-secondary mb-4">
            No recipe parts found for this order.
        </div>
    }

    <!-- Bottom action -->
    <div class="d-flex justify-content-end">
        <button type="button"
                class="btn btn-outline-danger"
                data-bs-toggle="modal"
                data-bs-target="#deleteOrderModal">
            Delete order
        </button>
    </div>


<!-- Delete confirmation  -->
<div class="modal fade"
     id="deleteOrderModal"
     tabindex="-1"
     aria-labelledby="deleteOrderModalLabel"
     aria-hidden="true">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-light border-secondary">

            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="deleteOrderModalLabel">
                    Confirm delete
                </h5>
                <button type="button"
                        class="btn-close btn-close-white"
                        data-bs-dismiss="modal"
                        aria-label="Close">
                </button>
            </div>

            <div class="modal-body">
                You are about to delete
                <span class="fw-semibold">order #@Model.Order.ID</span>.
                <div class="mt-2 opacity-75">
                    This action cannot be undone.
                </div>
            </div>

            <div class="modal-footer border-secondary">
                <button type="button"
                        class="btn btn-outline-light"
                        data-bs-dismiss="modal">
                    Cancel
                </button>

                <form method="post"
                      asp-page-handler="Delete"
                      asp-route-orderId="@Model.Order.ID">
                    <button type="submit"
                            class="btn btn-danger">
                        Yes, delete
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>
}