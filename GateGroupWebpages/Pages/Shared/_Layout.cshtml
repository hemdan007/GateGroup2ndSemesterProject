<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GateGroupWebpages</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GateGroupWebpages.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container">
                <!-- Logo går til forsiden -->
                <a class="navbar-brand" href="/">GateGourmet</a>
                <!--logud knappen -->
                @if (Context.Session.GetString("IsLoggedIn") == "true")
                {
                    <div style="position: absolute; right: 20px; top: 10px;">
                        <a href="/Login" class="btn btn-dark btn-sm"
                           style="background-color: #000000; border-color: #000000; color: white;"
                           onmouseover="this.style.color='black'; this.style.backgroundColor='white'"
                           onmouseout="this.style.color='white'; this.style.backgroundColor='#000000'">
                            Log ud
                        </a>
                    </div>
                }
                <head>
                    <!-- en lille fade når man skifter side -->
                    <style>
                        body {
                            animation: fadeIn 0.5s ease-in-out;
                        }

                        @@keyframes fadeIn {
                            from {
                                opacity: 0;
                                transform: translateY(20px);
                            }

                            to {
                                opacity: 1;
                                transform: translateY(0);
                            }
                        }
                    </style>
                </head>
                

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
@*                         <li class="nav-item">
                            <a class="nav-link" href="/Privacy">Privacy</a>
                        </li>
 *@                        <li class="nav-item">
                            <a class="nav-link" href="/About">About</a>
                        </li>
                        <li class="nav-item">
							<a class="nav-link" href="/Login">Login</a>
                        </li>
                        
                        <!-- Order med sort dropdown -->
@*                         <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Order
                            </a>
                            <ul class="dropdown-menu" style="background-color: #000000; border: 1px solid #333;">
                                <li><a class="dropdown-item" href="/Login" style="color: white;">Login</a></li>
                                <li><hr class="dropdown-divider" style="border-color: #333;"></li>
                                <li><a class="dropdown-item" href="/NewOrder" style="color: white;">Bestil Ret</a></li>
                            </ul>
                        </li>
                        
 *@                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container">
            &copy; 2025 - GateGroupWebpages -
            <a href="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
