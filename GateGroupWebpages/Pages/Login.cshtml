@page
@model GateGroupWebpages.Pages.Shared.LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="login-container">
    <div class="login-card">

        <!-- Ikon + titel -->
        <div class="login-icon-wrapper">
            <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="#FFD700" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
        </div>

        <h2 class="login-title text-center">Password</h2>

        <form method="post" class="login-form">
            <div class="form-group mb-3">
                <input type="text"
                       id="userId"
                       name="UserID"
                       class="form-control"
                       placeholder="Insert your user ID"
                       required />
            </div>

            <div class="form-group mb-4">
                <input type="password"
                       id="password"
                       name="Password"
                       class="form-control"
                       placeholder="Insert your password"
                       required />
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Log in
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger mt-3 text-center">
                @Model.ErrorMessage
            </div>
        }
    </div>
</div>
