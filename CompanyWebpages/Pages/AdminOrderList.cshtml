@page
@model CompanyWebpages.Pages.AdminOrderListModel
@using gategourmetLibrary.Models
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Ordre Oversigt";
}

<div class="container mt-4 text-light">
    <h2 class="mb-3">Ordre Oversigt</h2>

    <!-- Filter form -->
    <div class="card mb-4 bg-dark border-light">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label for="selectedCustomerId" class="form-label">Filtrer efter firma:</label>
                    <select class="form-select" id="selectedCustomerId" name="selectedCustomerId" onchange="this.form.submit()">
                        <option value="">Alle firmaer</option>
                        @if (Model.Customers != null)
                        {
                            @foreach (var customer in Model.Customers)
                            {
                                <option value="@customer.ID" selected="@(Model.SelectedCustomerId == customer.ID)">
                                    @(string.IsNullOrEmpty(customer.CompanyName) ? customer.Name : customer.CompanyName)
                                    @if (!string.IsNullOrEmpty(customer.CompanyName) && customer.Name != customer.CompanyName)
                                    {
                                        <text> (@customer.CompanyName)</text>
                                    }
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <a href="/AdminOrderList" class="btn btn-secondary">Nulstil filter</a>
                </div>
            </form>
        </div>
    </div>
    @* filter by employee *@
    <form method="get" class="mb-3 d-flex align-items-center gap-2">
        <label for="empFilter" class="form-label mb-0 text-light">Filter by employee:</label>

        <select id="empFilter"
                name="empFilter"
                class="form-select form-select-sm w-auto"
                onchange="this.form.submit()">
            <option value="">-- Choose an employee --</option>
            @foreach (SelectListItem emp in Model.Filter)
            {
                <option value="@emp.Value"
                        selected="@(Model.empFilter == emp.Value)">
                    @emp.Text
                </option>
            }
        </select>

        <label for="FromDate" class="form-label mb-0 text-light">
			From:
        </label>
        <input type="date"
               id="FromDate"
               name="FromDate"
               class="form-control form-control-sm w-auto"
               value="@(Model.FromDate?.ToString("yyyy-MM-dd"))"
			   onchange="this.form.submit()" />

		<label for="ToDate" class="form-label mb-0 text-light">
			To:
		</label>
        <input type="date"
               id="ToDate"
               name="ToDate"
               class="form-control form-control-sm w-auto"
			   value="@(Model.ToDate?.ToString("yyyy-MM-dd"))"
			   onchange="this.form.submit()" />


        @if (!string.IsNullOrEmpty(Model.empFilter))
        {
            <span class="text-info ms-2">
                Show orders assigned to employee ID: @Model.empFilter
            </span>
        }
    </form>

    @* filter by department *@
    <form method="get" class="mb-3 d-flex align-items-center gap-2">
        <label for="depFilter" class="form-label mb-0 text-light">Filter by department:</label>

        <select id="depFilter"
                name="departmentFilter"
                class="form-select form-select-sm w-auto"
                onchange="this.form.submit()">
            <option value="">-- Choose a department --</option>
            @foreach (SelectListItem dep in Model.DepartmentFilter)
            {
                <option value="@dep.Value"
                        selected="@(Model.departmentFilter == dep.Value)">
                    @dep.Text
                </option>
            }
        </select>

        @if (!string.IsNullOrEmpty(Model.departmentFilter))
        {
            <span class="text-info ms-2">
                Showing orders for department ID: @Model.departmentFilter
            </span>
        }
    </form>

    @* filter by status on today's orders *@
    <form method="get" class="mb-4 d-flex align-items-center gap-2">
        <label for="statusFilter" class="form-label mb-0 text-light">Filter today's orders by status:</label>

        <select id="statusFilter"
                name="statusFilter"
                class="form-select form-select-sm w-auto"
                onchange="this.form.submit()">
            <option value="">-- All statuses today --</option>

            @{
                string[] allStatuses = new string[] { "Created", "InProgress", "Completed", "Cancelled" };

                foreach (string status in allStatuses)
                {
                    bool isSelected = Model.statusFilter == status;
                    string selectedText = isSelected ? "selected=\"selected\"" : "";
                    @:<option value="@status" @Html.Raw(selectedText)>@status</option>
                }
            }
        </select>

         @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-dark">
            <strong>Fejl:</strong> @Model.ErrorMessage
        </div>
    }

        @if (!string.IsNullOrEmpty(Model.statusFilter))
        {
            <span class="text-info ms-2">
                Showing @Model.statusFilter orders for today.
            </span>
        }
    </form>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success text-dark">
            <strong>Bekræftet:</strong> @Model.StatusMessage
        </div>
    }

    @if (Model.Orders == null || !Model.Orders.Any())
    {
        <div class="alert alert-info text-dark">
            <p>Ingen ordrer fundet.</p>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover align-middle">
                <thead class="table-light text-dark">
                    <tr>
                        <th>Ordre ID</th>
                        <th>Firma</th>
                        <th>Oprettet</th>
                        <th>Færdig senest</th>
                        <th>Status</th>
                        <th>Betalt</th>
                        <th>Handling</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Order order in Model.Orders)
                    {
                        <tr>
                            <td><strong>@order.ID</strong></td>
                            <td>
                                @if (order.CustomerOrder != null)
                                {
                                    @if (!string.IsNullOrEmpty(order.CustomerOrder.CompanyName))
                                    {
                                        <strong>@order.CustomerOrder.CompanyName</strong>
                                        @if (!string.IsNullOrEmpty(order.CustomerOrder.Name) && order.CustomerOrder.Name != order.CustomerOrder.CompanyName)
                                        {
                                            <br /><small class="text-muted">@order.CustomerOrder.Name</small>
                                        }
                                    }
                                    else
                                    {
                                        @order.CustomerOrder.Name
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>@order.OrderMade.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@order.OrderDoneBy.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                <span class="badge bg-secondary">@order.Status</span>
                            </td>
                            <td>
                                @if (order.paystatus)
                                {
                                    <span class="badge bg-success">Betalt</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Ikke betalt</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/Department/@order.ID"
                                       class="btn btn-primary btn-sm d-flex align-items-center gap-1"
                                       onclick="showLoading(this)">
                                        <span class="spinner-border spinner-border-sm d-none"
                                              role="status"></span>
                                        <i class="bi bi-search"></i> Spor ordre
                                    </a>
                                    @if (order.Status != OrderStatus.Cancelled)
                                    {
                                        <form method="post" asp-page-handler="Cancel" class="d-inline" id="cancelForm_@order.ID">
                                            <input type="hidden" name="orderId" value="@order.ID" />
                                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmCancel(@order.ID)">
                                                Annuller
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Allerede annulleret</span>
                                    }
                                </div>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-info"
                                   asp-page="/Responsible"
                                   asp-route-orderid="@order.ID">
                                    view employees who are Responsible for this order
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<script>
    function showLoading(button) {
        var spinner = button.querySelector('.spinner-border');
        if (spinner) {
            spinner.classList.remove('d-none');
        }
        button.disabled = true;
        button.classList.add('disabled');
    }

    function confirmCancel(orderId) {
        if (confirm('Er du sikker på, at du vil annullere ordre #' + orderId + '?')) {
            document.getElementById('cancelForm_' + orderId).submit();
        }
    }
</script>
