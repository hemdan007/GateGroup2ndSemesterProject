@page
@model CompanyWebpages.Pages.Create_AdminModel
@{
}
<h2>Create Admin Account</h2>
<section>
<form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="form-group">
        <label asp-for="Admin.Id">ID</label>
        <input asp-for="Admin.Id" class="form-control" />
        <span asp-validation-for="Admin.Id" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Admin.Name">Name</label>
        <input asp-for="Admin.Name" class="form-control" />
        <span asp-validation-for="Admin.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Admin.Email">Email</label>
        <input asp-for="Admin.Email" class="form-control" />
        <span asp-validation-for="Admin.Email" class="text-danger"></span>
    </div>
        <div class="mb-3">
            <label asp-for="Admin.Password" class="form-label"></label>
            <input asp-for="Admin.Password" type="password" class="form-control" />
            <span asp-validation-for="Admin.Password" class="text-danger"></span>
        </div>

    <div class="form-group">
        <label asp-for="Admin.WorkPhoneNumber">Work Phone</label>
        <input asp-for="Admin.WorkPhoneNumber" class="form-control" />
        <span asp-validation-for="Admin.WorkPhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Admin.PersonalPhoneNumber">Personal Phone</label>
        <input asp-for="Admin.PersonalPhoneNumber" class="form-control" />
        <span asp-validation-for="Admin.PersonalPhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PositionId">Position</label>
        <select asp-for="PositionId" asp-items="Model.Positions" class="form-control">
            <option value="">-- Select Position --</option>
        </select>
        <span asp-validation-for="PositionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Admin</button>
</form>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
