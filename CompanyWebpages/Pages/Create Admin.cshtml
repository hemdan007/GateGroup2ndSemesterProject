@page
@model CompanyWebpages.Pages.Create_AdminModel
@{
    ViewData["Title"] = "Create admin account";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h2 class="h5 mb-0">Create admin account</h2>
                </div>

                <div class="card-body">
                    <p class="text-muted mb-4">
                        Fill in the details below to create a new admin account.
                    </p>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Admin.Id" class="form-label">ID</label>
                            <input asp-for="Admin.Id" class="form-control" />
                            <span asp-validation-for="Admin.Id" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Admin.Name" class="form-label">Name</label>
                            <input asp-for="Admin.Name" class="form-control" />
                            <span asp-validation-for="Admin.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Admin.Email" class="form-label">Email</label>
                            <input asp-for="Admin.Email" class="form-control" />
                            <span asp-validation-for="Admin.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Admin.Password" class="form-label">Password</label>
                            <input asp-for="Admin.Password" type="password" class="form-control" />
                            <span asp-validation-for="Admin.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Admin.WorkPhoneNumber" class="form-label">Work phone</label>
                            <input asp-for="Admin.WorkPhoneNumber" class="form-control" />
                            <span asp-validation-for="Admin.WorkPhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Admin.PersonalPhoneNumber" class="form-label">Personal phone</label>
                            <input asp-for="Admin.PersonalPhoneNumber" class="form-control" />
                            <span asp-validation-for="Admin.PersonalPhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="PositionId" class="form-label">Position</label>
                            <select asp-for="PositionId" asp-items="Model.Positions" class="form-select">
                                <option value="">-- Select position --</option>
                            </select>
                            <span asp-validation-for="PositionId" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Create admin
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="mt-3 text-center">
                <a asp-page="./Admin_Overwiew_test" class="btn btn-link">
                    Back to admin overview
                </a>
            </div>

        </div>
    </div>
</div>
