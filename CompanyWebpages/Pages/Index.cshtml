@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<section class="container py-5">

    <div class="row align-items-center gy-4">

        <!-- Text -->
        <div class="col-12 col-lg-7 text-center text-lg-start">
            <h1 class="display-5 mb-3">
                Welcome to the employee portal
            </h1>

            <p class="lead text-muted mb-4">
                This system helps employees manage their daily tasks efficiently.
                From the employee dashboard, you can view assigned orders, check
                storage locations, and update the status of your tasks.
            </p>

            <p class="text-muted mb-0">
                The platform supports coordination between departments and provides
                a clear overview of the production workflow.
            </p>
        </div>

        <!-- Image -->
        <div class="col-12 col-lg-5 text-center">
            <img src="~/img/gg-gategourmet.jpg"
                 alt="Employee portal overview"
                 class="img-fluid rounded shadow-sm"
                 style="max-width: 280px;" />
        </div>

    </div>

</section>
