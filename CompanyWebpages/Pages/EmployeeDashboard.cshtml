@page
@model CompanyWebpages.Pages.EmployeeDashboardModel
@using gategourmetLibrary.Models

@{
    ViewData["Title"] = "Employee dashboard";
}

<div class="container mt-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <div>
            <h2 class="mb-1">My tasks</h2>
            <p class="text-muted mb-0">
                View your assigned recipe parts, mark them as completed, and update where they are stored
                (freezer, fridge, or dry storage).
            </p>
        </div>
    </div>

    @{
        bool hasUnassigned = false;

        if (Model.Tasks != null)
        {
            foreach (EmployeeTask employeeTask in Model.Tasks)
            {
                if (employeeTask.Location == "Not registered")
                {
                    hasUnassigned = true;
                    break;
                }
            }
        }
    }

    @if (hasUnassigned)
    {
        <div class="gp-note mb-3" role="note">
            <div class="gp-note-title">Action needed</div>
            <div class="gp-note-text">
                Some tasks do not have a storage location yet.
                Please assign a freezer, fridge, or dry storage before the order is sent.
            </div>
        </div>
    }

    @if (Model.Tasks == null || !Model.Tasks.Any())
    {
        <div class="gp-note mt-3" role="note">
            <div class="gp-note-title">Info</div>
            <div class="gp-note-text">
                No tasks assigned.
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 10%;">Order</th>
                        <th style="width: 30%;">Task</th>
                        <th style="width: 15%;">Location</th>
                        <th style="width: 15%;">Status</th>
                        <th style="width: 15%;">Actions</th>
                        <th style="width: 15%;">Storage</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (EmployeeTask task in Model.Tasks)
                    {
                        <tr>
                            <td class="fw-semibold">@task.OrderId</td>

                            <td>
                                <div class="fw-semibold">@task.TaskName</div>
                                <div class="text-muted small">
                                    Recipe part ID: @task.RecipePartId
                                </div>
                            </td>

                            <td>
                                @if (task.Location == "Freezer")
                                {
                                    <span class="badge bg-primary">Freezer</span>
                                }
                                else if (task.Location == "Fridge")
                                {
                                    <span class="badge bg-success">Fridge</span>
                                }
                                else if (task.Location == "Dry")
                                {
                                    <span class="badge bg-warning text-dark">Dry</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Not registered</span>
                                }
                            </td>

                            <td>
                                @if (task.IsCompleted)
                                {
                                    <span class="badge bg-success">Completed</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">In progress</span>
                                }
                            </td>

                            <td>
                                @if (!task.IsCompleted)
                                {
                                    <form method="post" asp-page-handler="MarkDone">
                                        <input type="hidden" name="orderId" value="@task.OrderId" />
                                        <input type="hidden" name="recipePartId" value="@task.RecipePartId" />
                                        <button type="submit" class="btn btn-sm btn-success">
                                            Mark done
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted small">No actions</span>
                                }
                            </td>

                            <td>
                                <form method="post"
                                      asp-page-handler="UpdateLocation"
                                      class="d-flex flex-column flex-md-row gap-2">

                                    <input type="hidden"
                                           name="recipePartId"
                                           value="@task.RecipePartId" />

                                    <select name="selectedWarehouseId"
                                            class="form-select form-select-sm"
                                            required>
                                        <option value=""
                                                disabled
                                                selected="@(task.Location == "Not registered" ? "selected" : null)">
                                            -- Select warehouse --
                                        </option>

                                        @if (Model.Warehouses != null)
                                        {
                                            foreach (Warehouse warehouse in Model.Warehouses)
                                            {
                                                bool isSelected =
                                                task.Location == warehouse.Type.ToString();

                                                <option value="@warehouse.ID"
                                                        selected="@(isSelected ? "selected" : null)">
                                                    @warehouse.Type.ToString() - @warehouse.Location
                                                </option>
                                            }
                                        }
                                    </select>

                                    <button type="submit"
                                            class="btn btn-sm btn-outline-accent">
                                        Update
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }
</div>
