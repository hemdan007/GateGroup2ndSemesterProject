@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyWebpages</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/Site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CompanyWebpages.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/SignupCustomer.css" />
    <link rel="stylesheet" href="~/css/CreateAccount.css" />
    <link rel="stylesheet" href="~/css/EmployeeLogin.css" />
    <link rel="stylesheet" href="~/css/AdminOrderList.css" />
    <link rel="stylesheet" href="~/css/EmployeeDashboard.css" />
</head>

<body>
    @{
        bool isLoggedIn = Context.Session.GetString("IsLoggedIn") == "true";
        string username = Context.Session.GetString("username");
        bool admin = Context.Session.GetString("admin") == "true";
    }

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark border-bottom mb-3">
            <div class="container">

                <a class="navbar-brand fw-semibold" asp-page="/Index">GatePlanner</a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">

                    <!-- Left side menu -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">Home</a>
                        </li>

                        @if (admin)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Orders
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-page="/AdminOrderList">
                                            Orders overview
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Customers
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/Create_account">Create customer</a></li>
                                    <li><a class="dropdown-item" asp-page="/SignUpCustommer">Set customer password</a></li>
                                    <li><a class="dropdown-item" asp-page="/CustomerAdminList">Manage / delete customers</a></li>
                                </ul>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   aria-expanded="false">
                                    Employees
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-page="/NewEmployee">Create employee</a></li>
                                    <li><a class="dropdown-item" asp-page="/Employees">Employee overview</a></li>
                                    <li><a class="dropdown-item" asp-page="/Create_Admin">Create admin</a></li>
                                </ul>
                            </li>
                        }

                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/EmployeeDashboard">My tasks</a>
                            </li>
                        }
                    </ul>

                    <!-- Right side menu -->
                    <ul class="navbar-nav ms-auto">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-muted">Hello, @username</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/EmployeeLogin">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/EmployeeLogin">Employee login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer mt-4">
        <div class="container py-3">
            &copy; 2025 - CompanyWebpages -
            <a asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
