@page
@model CompanyWebpages.Pages.CustomerAdminListModel
@using gategourmetLibrary.Models

@{
    ViewData["Title"] = "Manage customers";
}

<div class="container mt-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">Admin – Manage customers</h1>
            <p class="text-muted mb-0">
                Delete customers from the system so only active customers have access.
            </p>
        </div>

        <div class="d-flex gap-2">
            <a asp-page="/Create_account" class="btn btn-primary">
                Create customer
            </a>

            <a asp-page="/AdminOrderList" class="btn btn-outline-secondary">
                Back
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success">
            @Model.StatusMessage
        </div>
    }

    <div class="table-responsive mt-3">
        <table class="table table-striped align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Customer ID</th>
                    <th>Name</th>
                    <th>Password</th>
                    <th style="width: 160px;">Actions</th>
                </tr>
            </thead>

            <tbody>
                @if (Model.Customers != null && Model.Customers.Count > 0)
                {
                    foreach (Customer customer in Model.Customers)
                    {
                        <tr>
                            <td class="fw-semibold">@customer.ID</td>
                            <td>@customer.Name</td>
                            <td>@customer.Password</td>
                            <td>
                                <!-- NO JS: go to confirmation page -->
                                <a asp-page="/CustomerDeleteConfirm"
                                   asp-route-customerId="@customer.ID"
                                   class="btn btn-sm btn-outline-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-muted">
                            No customers found.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-warning mt-3">
        <strong>Note:</strong> Deleting a customer requires confirmation on the next page.
    </div>

</div>
