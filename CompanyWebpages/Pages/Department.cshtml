@page "{orderId:int}"
@model CompanyWebpages.Pages.OrderTrackingModel
@using gategourmetLibrary.Models
@using System.Collections.Generic
@using System.Linq

@{
    ViewData["Title"] = "Order information";
}

<div class="container mt-4">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-4">
        <h2 class="mb-0">Order information – Order #@Model.OrderId</h2>

        <a asp-page="/AdminOrderList" class="btn btn-outline-secondary">
            Back to overview
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-warning mb-4">
            <strong>Information:</strong> @Model.ErrorMessage
        </div>
    }

    @if (Model.Order != null)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Order details</h5>
            </div>

            <div class="card-body">
                <div class="row g-3">
                    <div class="col-12 col-md-3">
                        <div class="text-muted small">Order ID</div>
                        <div class="fw-semibold">@Model.Order.ID</div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="text-muted small">Created</div>
                        <div class="fw-semibold">@Model.Order.OrderMade.ToString("yyyy-MM-dd HH:mm")</div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="text-muted small">Due</div>
                        <div class="fw-semibold">@Model.Order.OrderDoneBy.ToString("yyyy-MM-dd HH:mm")</div>
                    </div>

                    <div class="col-12 col-md-3">
                        <div class="text-muted small">Status</div>
                        <span class="badge bg-secondary">@Model.Order.Status</span>
                    </div>
                </div>
            </div>
        </div>
    }

    @{
        List<OrderItem> missingItems = Model.OrderItems != null && Model.OrderItems.Any()
        ? Model.OrderItems.Where(i => i.Ingredient.Quantity <= 0 || i.Ingredient.Quantity < i.Quantity).ToList()
        : new List<OrderItem>();

        List<OrderItem> lowStockItems = Model.OrderItems != null && Model.OrderItems.Any()
        ? Model.OrderItems.Where(i => i.Ingredient.Quantity > 0 && i.Ingredient.Quantity >= i.Quantity && i.Ingredient.Quantity < 5).ToList()
        : new List<OrderItem>();

        List<OrderItem> availableItems = Model.OrderItems != null && Model.OrderItems.Any()
        ? Model.OrderItems.Where(i => i.Ingredient.Quantity >= i.Quantity && i.Ingredient.Quantity >= 5).ToList()
        : new List<OrderItem>();
    }

    @if (Model.OrderItems == null || !Model.OrderItems.Any())
    {
        <div class="alert alert-info">
            <h5 class="mb-2">No items found</h5>
            <p class="mb-3">
                This order does not have any items to track yet.
            </p>
            <a asp-page="/AdminOrderList" class="btn btn-primary">
                Back to orders overview
            </a>
        </div>
    }
    else
    {
        @if (missingItems.Any())
        {
            <div class="alert alert-danger mb-4">
                <h5 class="mb-2">
                    Critical: @missingItems.Count item(s) missing or insufficient
                </h5>
                <ul class="mb-0">
                    @foreach (OrderItem item in missingItems)
                    {
                        int shortage = item.Quantity - item.Ingredient.Quantity;

                        <li>
                            <strong>@item.Ingredient.Name</strong>:
                            Needed: @item.Quantity,
                            Available: @item.Ingredient.Quantity,
                            Missing: @(shortage > 0 ? shortage.ToString() : "0")
                            – Warehouse: @item.Warehouse.Name (@item.Warehouse.Location)
                        </li>
                    }
                </ul>
            </div>
        }

        @if (lowStockItems.Any())
        {
            <div class="alert alert-warning mb-4">
                <h5 class="mb-2">
                    Warning: @lowStockItems.Count item(s) low stock
                </h5>
                <ul class="mb-0">
                    @foreach (OrderItem item in lowStockItems)
                    {
                        <li>
                            <strong>@item.Ingredient.Name</strong>:
                            Only @item.Ingredient.Quantity left
                            – Warehouse: @item.Warehouse.Name (@item.Warehouse.Location)
                        </li>
                    }
                </ul>
            </div>
        }

        @if (!missingItems.Any() && !lowStockItems.Any() && Model.OrderItems.Any())
        {
            <div class="alert alert-success mb-4">
                <h5 class="mb-0">All items are available in stock</h5>
            </div>
        }

        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Detailed stock overview</h5>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered mb-0 align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Ingredient</th>
                                <th>Needed</th>
                                <th>Available</th>
                                <th>Warehouse name</th>
                                <th>Warehouse location</th>
                                <th>Expiry date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (OrderItem item in Model.OrderItems)
                            {
                                bool hasEnough = item.Ingredient.Quantity >= item.Quantity;

                                string statusText = "OK";
                                string statusBadge = "bg-success";

                                if (!hasEnough)
                                {
                                    statusText = "Missing";
                                    statusBadge = "bg-danger";
                                }
                                else if (item.Ingredient.Quantity < 5)
                                {
                                    statusText = "Low stock";
                                    statusBadge = "bg-warning text-dark";
                                }

                                <tr>
                                    <td class="fw-semibold">@item.Ingredient.Name</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        @item.Ingredient.Quantity
                                        @if (!hasEnough)
                                        {
                                            <span class="badge bg-danger ms-2">
                                                Missing @(item.Quantity - item.Ingredient.Quantity)
                                            </span>
                                        }
                                    </td>
                                    <td>@item.Warehouse.Name</td>
                                    <td>
                                        <div class="fw-semibold">@item.Warehouse.Location</div>
                                        <div class="text-muted small">Warehouse ID: @item.WarehouseId</div>
                                    </td>
                                    <td>@item.Ingredient.ExpireDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge @statusBadge">@statusText</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row g-3 mt-1">
            <div class="col-12 col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Available items</div>
                        <h3 class="mb-0">@availableItems.Count</h3>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Low stock items</div>
                        <h3 class="mb-0">@lowStockItems.Count</h3>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <div class="text-muted small">Missing items</div>
                        <h3 class="mb-0">@missingItems.Count</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
