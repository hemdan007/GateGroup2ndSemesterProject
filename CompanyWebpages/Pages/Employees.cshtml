@page
@model CompanyWebpages.Pages.EmployeesModel
@{
}
<div class="container mt-4">
    <h1 class="mb-4">Employees</h1>
   

    @if (Model.Employees.Count == 0)
    {
        <div class="alert alert-info">
            No employees found. Create your first employee <a href="/NewEmployee">here</a>.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var employee in Model.Employees.Values)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@employee.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">ID: @employee.Id</h6>

                            <div class="employee-info mb-3">
                                <p class="card-text">
                                    <strong>Email:</strong> @employee.Email<br>
                                    <strong>Work Phone:</strong> @employee.WorkPhoneNumber<br>
                                    <strong>Personal Phone:</strong> @employee.PersonalPhoneNumber
                                   
                                </p>
                            </div>

                            <div class="d-flex justify-content-between">
                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                                    <input type="hidden" name="id" value="@employee.Id" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>

                                @* <a href="/EditEmployee?id=@employee.Id" class="btn btn-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s;
        box-shadow: 0 4px 6px Gold;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 12px Gold½;
        }

    .employee-info {
        min-height: 100px;
    }
    /* Gør ALLE tekster i kortet mørkere */
    .card-body {
        color: #212529; /* Bootstrap's darkest text color */
    }

    /* Eller specifikt på tekstelementer */
    .card-text {
        color: #000000; /* Ren sort */
    }

        /* Mørkere tekst på labels */
        .card-text strong {
            color: #343a40; /* Dark gray */
        }
</style>