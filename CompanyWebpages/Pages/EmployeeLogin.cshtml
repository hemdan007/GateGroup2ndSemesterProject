@page
@model CompanyWebpages.Pages.EmployeeLoginModel
@{
}


<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <svg width="50" height="50" viewBox="0 0 24 24" fill="none" stroke="#FF6B35" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            <h2>Log ind</h2>
            <p class="subtitle">Til køkkensystemet</p>
        </div>

        <form method="post" class="login-form">
            <div class="form-group">
                <label for="userId">Kok ID</label>
                <input type="number" id="userId" name="UserID" class="form-control"
                       placeholder="Indtast dit kok ID" required min="1" />
            </div>

            <div class="form-group">
                <label for="password">Adgangskode</label>
                <input type="password" id="password" name="Password" class="form-control"
                       placeholder="Indtast din adgangskode" required />
            </div>

            <button type="submit" class="btn-login">Log ind</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                @Model.ErrorMessage
            </div>
        }
    </div>
</div>

<style>
    /* Container - sort baggrund */
    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: White;
        padding: 20px;
    }

    /* Login kort - hvid */
    .login-card {
        background: white;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 400px;
    }

    /* Header sektion */
    .login-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .login-header svg {
        margin-bottom: 15px;
    }

    .login-header h2 {
        margin: 0;
        color: #333;
        font-size: 24px;
        font-weight: 600;
    }

    .subtitle {
        margin: 5px 0 0 0;
        color: #666;
        font-size: 14px;
    }

    /* Form styling */
    .login-form {
        margin: 30px 0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-weight: 500;
        font-size: 14px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 16px;
        box-sizing: border-box;
    }

    .form-control:focus {
        outline: none;
        border-color: #FF6B35;
        box-shadow: 0 0 0 2px rgba(255, 107, 53, 0.1);
    }

    /* Knap */
    .btn-login {
        width: 100%;
        padding: 14px;
        background: #FF6B35;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s;
        margin-top: 10px;
    }

    .btn-login:hover {
        background: #e55a2a;
    }

    /* Fejlbesked */
    .error-message {
        background: #ffeaea;
        color: #d32f2f;
        padding: 12px 15px;
        border-radius: 5px;
        border: 1px solid #ffcdcd;
        margin-top: 20px;
        font-size: 14px;
    }

    /* Fjern op/ned pile fra number input */
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>