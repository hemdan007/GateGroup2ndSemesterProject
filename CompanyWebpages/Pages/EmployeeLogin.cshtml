@page
@model CompanyWebpages.Pages.EmployeeLoginModel
@{
    ViewData["Title"] = "Employee login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-5">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="h5 mb-0">Employee login</h2>
                </div>

                <div class="card-body">
                    <p class="text-muted text-center mb-4">
                        Sign in to the kitchen system.
                    </p>

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            <strong>Login failed:</strong> @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label for="userId" class="form-label">Employee ID</label>
                            <input type="number"
                                   id="userId"
                                   name="UserID"
                                   class="form-control"
                                   placeholder="Enter your employee ID"
                                   required
                                   min="1" />
                        </div>

                        <div class="mb-4">
                            <label for="password" class="form-label">Password</label>
                            <input type="password"
                                   id="password"
                                   name="Password"
                                   class="form-control"
                                   placeholder="Enter your password"
                                   required />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center text-muted small">
                    If you cannot log in, contact an administrator.
                </div>
            </div>

        </div>
    </div>
</div>
