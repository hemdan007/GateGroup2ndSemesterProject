@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h1 class="h4 mb-0">Something went wrong</h1>
                </div>

                <div class="card-body text-center">
                    <p class="mb-3">
                        An error occurred while processing your request.
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small mb-3">
                            <strong>Request ID:</strong>
                            <code>@Model.RequestId</code>
                        </p>
                    }

                    <p class="text-muted mb-0">
                        Please try again or return to a previous page.
                        If the problem continues, contact an administrator.
                    </p>

                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <a asp-page="/Index" class="btn btn-primary">
                            Go to home
                        </a>

                        <a asp-page="/AdminOrderList" class="btn btn-outline-secondary">
                            Back
                        </a>
                    </div>
                </div>
            </div>

            <div class="gp-note mt-3 text-center" role="note">
                <div class="gp-note-title">Note for developers</div>
                <div class="gp-note-text">
                    Detailed error information is only shown when the application runs in
                    <strong>Development</strong> mode.
                </div>
            </div>

        </div>
    </div>
</div>
